
@model RegisterViewModel
<h1 class="text-center" style="color:black;padding-top:20px;">Sign-Up</h1>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="padding-top:50px;padding-bottom:50px">
        <form style="padding-bottom:40px" method="post" asp-controller="Account" asp-action="AddUser">
            <div asp-validation-summary="ModelOnly" style="color:red"></div>
            <div>
                <label asp-for="FirstName"></label>
                <input placeholder="First Name" asp-for="FirstName" class="form-control" />
                <span style="color:red" asp-validation-for="FirstName"></span>
            </div>
            <div>
                <label asp-for="LastName"></label>
                <input placeholder="Last Name" asp-for="LastName" class="form-control" />
                <span style="color:red" asp-validation-for="LastName"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input placeholder="example@email.com" asp-for="Email" class="form-control" />
                <span style="color:red" asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input placeholder="*******" asp-for="Password" class="form-control" />
                <span style="color:red" asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword"></label>
                <input placeholder="*******" asp-for="ConfirmPassword" class="form-control" />
                <span style="color:red" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div style="padding-bottom:20px;">
                <label asp-for="PhoneNumber"></label>
                <input placeholder="***********" asp-for="PhoneNumber" type="number" class="form-control" />
                <span style="color:red" asp-validation-for="PhoneNumber"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2 rounded-lg">Register</button>

        </form>
    </div>
    <div class="col-md-3"></div>


</div>