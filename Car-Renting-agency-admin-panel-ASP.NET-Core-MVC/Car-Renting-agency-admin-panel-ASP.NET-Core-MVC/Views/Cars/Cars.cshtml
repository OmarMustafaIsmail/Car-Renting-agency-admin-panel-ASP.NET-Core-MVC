@model IEnumerable<Cars>

<div class="row" style="padding-top:20px;padding-bottom:70px">
    <div class="col-md-3">
        <a asp-controller="Cars" asp-action="GetCreateView" class="btn btn-primary rounded-lg">Add Car</a>
    </div>

    <div class="col-md-6">
        <h1 class="text-center">Cars</h1>
    </div>
   
    


</div>
@if (Model.ToList().Count == 0)
{
    {<h1 class="text-center" style="color:maroon">No cars to show </h1>}
}
else
{

    @foreach (var item in Model)
    {
        <div class="row" style="padding-bottom:40px">
            <div class="col-md-1"></div>
            <div class="col-md-5">
                <img src="@item.ImageUrl" style="width:300px" ; />
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-4" style="padding-bottom:20px">
                <h5>@item.MarkName</h5>
                @if (item.isCarRented)
                {
                    <i style="color:green" class= "bi bi-check">RENTED</i>
                }
                <h8>@item.ManYear</h8>
                <div class="card " style="background-color:@item.Color;width:30px; height:4px"></div>
                <h8>$@item.Price</h8>
                <div class="row">
                    <div style="padding-top:10px" class="col-md-2">
                        <a asp-controller="Cars" asp-action="GetEditView" style="color:white" class="btn btn-primary rounded-lg" asp-route-id="@item.Id">Edit</a>
                    </div>
                    <div style="padding-top:10px;padding-left:25px" class="col-md-2">
                        <a class="btn btn-danger rounded-lg" asp-controller="Cars" asp-action="GetDeleteView" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>

            <hr />
        </div>

    }
}




